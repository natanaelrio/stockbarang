generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model gudang {
  id            String    @id @default(uuid())
  start         DateTime  @default(now())
  end           DateTime? @updatedAt
  namaGudang    String?   @unique
  gudangProduct product[] @relation("GudangProduct")
}

model product {
  id           String    @id @default(uuid())
  start        DateTime  @default(now())
  end          DateTime? @updatedAt
  name_barang  String?
  stock_barang Int?

  gudangProduct  gudang[]         @relation("GudangProduct")
  pendingProduct pendingProduct[] @relation("PendingProduct")
}

model pendingProduct {
  id            String    @id @default(uuid())
  start         DateTime  @default(now())
  end           DateTime? @updatedAt
  stock_barang  Int?
  user          String?
  username      String?
  role          String?
  note          String?
  jenisBarang   String?
  statusProduct Boolean   @default(false)
  products      product[] @relation("PendingProduct")
}

model notifUser {
  id           String    @id @default(uuid())
  start        DateTime  @default(now())
  end          DateTime? @updatedAt
  username     String?
  namaBarang   String?
  jumlahBarang Int?
  note         String?
}

model logUser {
  id           String    @id @default(uuid())
  start        DateTime  @default(now())
  end          DateTime? @updatedAt
  userActivity String?
  activity     String?
}
